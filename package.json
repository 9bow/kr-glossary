{
  "name": "kr-glossary",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run preprocess:data && tsc -b && vite build",
    "preprocess:data": "tsx scripts/build-preprocess-data.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "preview:github": "vite preview --host 0.0.0.0 --port 4173",
    "build:github": "npm run preprocess:data && NODE_ENV=production vite build --mode github",
    "build:production": "npm run preprocess:data && NODE_ENV=production USE_CUSTOM_DOMAIN=true vite build --mode github",
    "domain:cname": "node scripts/generate-cname.js",
    "domain:cname:prod": "node scripts/generate-cname.js --production",
    "domain:cname:staging": "node scripts/generate-cname.js --staging",
    "domain:update-urls": "node scripts/update-domain-urls.js",
    "domain:update-urls:prod": "node scripts/update-domain-urls.js --production",
    "domain:update-urls:staging": "node scripts/update-domain-urls.js --staging",
    "test:github-actions": "./scripts/test-github-actions.sh",
    "analyze": "npx vite-bundle-analyzer",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "fuse.js": "^7.1.0",
    "giscus": "^1.6.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "sharp": "^0.34.3",
    "tsx": "^4.20.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  }
}
